<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/bg_layout_gradient"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


    <include layout="@layout/component_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_root">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/example_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/iv_profile_header"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_16">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhon Wick Ferguso"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/title_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jhonwick@gmail.com"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>